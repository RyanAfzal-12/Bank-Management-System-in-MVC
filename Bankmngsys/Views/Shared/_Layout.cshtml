<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Bankmngsys</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Bankmngsys.styles.css" asp-append-version="true" />
    <style>
        /* Teal Theme */
        body {
            background-color: #e9f5f5; /* Light teal background */
            font-family: Arial, sans-serif;
            color: #495057;
        }

        /* Navbar Styling */
        .navbar {
            background-color: #008080; /* Teal background (navbar) */
        }

        .navbar-brand, .nav-link {
            color: #ffffff !important; /* White color for links */
        }

        .navbar-toggler-icon {
            background-color: #ffffff; /* White hamburger menu icon */
        }

        .navbar-nav .nav-link:hover {
            background-color: #005757; /* Darker teal on hover */
            color: #ffffff;
        }

        /* Footer Styling */
        .footer {
            background-color: #008080; /* Teal footer */
            color: #ffffff;
            padding: 5px 0; /* Reduced padding for smaller height */
            font-size: 0.8rem; /* Smaller font size */
        }

            .footer a {
                color: #ffffff;
            }

                .footer a:hover {
                    color: #ffcc00; /* Gold color for links in footer on hover */
                }

        /* Content Container */
        .container {
            padding-top: 20px;
        }

        h1 {
            color: #008080; /* Teal header text */
        }

        /* Button Styling */
        .btn-primary {
            background-color: #008080;
            border-color: #007373;
        }

            .btn-primary:hover {
                background-color: #005757;
                border-color: #004545;
            }

        .box-shadow {
            box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Bankmngsys</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer text-center">
        <div class="container">
            &copy; 2024 - Bankmngsys - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
