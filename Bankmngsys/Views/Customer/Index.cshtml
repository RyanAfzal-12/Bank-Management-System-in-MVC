@model List<Bankmngsys.Models.Entities.Customer>

<div class="customer-container py-5">
    <div class="container bg-white p-4 rounded shadow-lg">
        <h1 class="text-center text-teal mb-4">Customers</h1>
        <a asp-controller="Customer" asp-action="Create" class="btn btn-teal mb-3 float-end">Add Customer</a>
        <table class="table table-striped table-bordered">
            <thead class="table-teal">
                <tr>
                    <th>Id</th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Email</th>
                    <th>Phone</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var customer in Model)
                {
                    <tr>
                        <td>@customer.Id</td>
                        <td>@customer.FirstName</td>
                        <td>@customer.LastName</td>
                        <td>@customer.Email</td>
                        <td>@customer.Phone</td>
                        <td>
                            <div class="d-flex gap-2">
                                <a asp-controller="Customer" asp-action="Edit" asp-route-id="@customer.Id" class="btn btn-info text-white">Edit</a>
                                <form asp-controller="Customer" asp-action="Delete" asp-route-id="@customer.Id" method="post" class="d-inline">
                                    <input type="submit" class="btn btn-danger" value="Delete" />
                                </form>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<style>
    body {
        background: linear-gradient(135deg, #e0f2f1, #b2dfdb);
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        margin: 0;
        height: 100vh;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
    }

    .customer-container {
        flex: 1;
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 20px;
    }

    .container {
        width: 100%;
        max-width: 1200px;
        border-radius: 15px;
        box-shadow: 0 8px 15px rgba(0, 0, 0, 0.1);
    }

    h1 {
        font-size: 2rem;
        color: #00796b;
        font-weight: 600;
        margin-bottom: 20px;
    }

    .table {
        margin-top: 20px;
        font-size: 1rem;
        text-align: center;
    }

        .table th, .table td {
            vertical-align: middle;
        }

    .table-teal {
        background-color: #00796b;
        color: #fff;
        border-radius: 10px;
    }

    .table-striped tbody tr:nth-child(odd) {
        background-color: #e0f2f1;
    }

    .d-flex.gap-2 a, .d-flex.gap-2 form {
        flex: 1;
    }

    .btn {
        font-size: 0.9rem;
        border-radius: 5px;
        padding: 8px 12px;
        transition: transform 0.3s ease;
    }

    .btn-teal {
        background-color: #00796b;
        border: none;
    }

        .btn-teal:hover {
            background-color: #004d40;
            transform: scale(1.05);
        }

    .btn-info {
        background-color: #00796b;
        border: none;
    }

        .btn-info:hover {
            background-color: #004d40;
            transform: scale(1.05);
        }

    .btn-danger {
        background-color: #f44336;
        border: none;
    }

        .btn-danger:hover {
            background-color: #d32f2f;
            transform: scale(1.05);
        }

    /* Centering the content vertically and horizontally */
    .container {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
    }
</style>
